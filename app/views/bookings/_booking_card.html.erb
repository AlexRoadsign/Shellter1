<% main_photo = booking.hostel.photos[0] %>
<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="booking-card" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cloudinary_url_internal(main_photo.path, width: 800, height: 600) %>')">
    <%#= link_to "", hostel_path(booking.hostel), class: "booking-card-link" %>
    <div class="booking-card-category">
      <h2><%= booking.hostel.city[0,12] %></h2>
    </div>
    <div class="booking-card-description">
      <h4><small>From</small> <%= booking.date_from %> <small>To</small> <%= booking.date_to %></h4>
      <h4><%#= booking.hostel.type %></h4>
      <div class="booking_details">
        <h4><small>No. People:</small> <%= booking.number_of_person %></h4>
        <h4 class="accepted"><small>Status:</small> Accepted</h4>
        <h5><%= link_to "Further details", office_path(booking.hostel) %></h5>
      </div>
    </div>
    <% if booking.hostel.user %>
    <%= image_tag booking.hostel.user.avatar, class: "booking-card-user" %>
    <% end %>
  </div>
</div>
